# ============================================
# LLM Reliability Control Plane - Environment Variables Template
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ============================================
# REQUIRED: Gemini API Key
# ============================================
# Get from: https://aistudio.google.com/app/apikey
LRCP_GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here

# ============================================
# REQUIRED: Datadog Configuration
# ============================================
# Get from: https://app.datadoghq.com/organization-settings/api-keys
LRCP_DATADOG_API_KEY=your-datadog-api-key-here
DD_API_KEY=your-datadog-api-key-here

# Get from: https://app.datadoghq.com/organization-settings/application-keys
DD_APP_KEY=your-datadog-app-key-here

# Datadog site (datadoghq.com, datadoghq.eu, us3.datadoghq.com, us5.datadoghq.com, ap1.datadoghq.com, ddog-gov.com)
# Your site: us5.datadoghq.com
DD_SITE=us5.datadoghq.com

# Datadog Agent (for local development, use localhost; for Cloud Run, use agentless)
DD_AGENT_HOST=localhost
DD_DOGSTATSD_PORT=8125
DD_TRACE_AGENT_PORT=8126

# Datadog Service Configuration
DD_SERVICE=llm-reliability-control-plane
DD_ENV=production
DD_VERSION=0.1.0

# Datadog Tracing & Logging
DD_TRACE_ENABLED=true
DD_LOGS_ENABLED=true

# Datadog LLM Observability (agentless mode for Cloud Run)
DD_LLMOBS_AGENTLESS_ENABLED=1
DD_LLMOBS_ML_APP=llm-reliability-control-plane

  # ============================================
  # OPTIONAL: Google Cloud Vertex AI
  # ============================================
# Get from: https://console.cloud.google.com/
LRCP_GCP_PROJECT_ID=llm-reliability-control
LRCP_GCP_REGION=us-central1

# Vertex AI Endpoints (if using deployed models)
LRCP_VERTEX_AI_COST_ENDPOINT=https://us-central1-aiplatform.googleapis.com/v1/projects/YOUR_PROJECT/locations/us-central1/endpoints/YOUR_ENDPOINT:predict
LRCP_VERTEX_AI_QUALITY_ENDPOINT=https://us-central1-aiplatform.googleapis.com/v1/projects/YOUR_PROJECT/locations/us-central1/endpoints/YOUR_ENDPOINT:predict
LRCP_VERTEX_AI_ANOMALY_ENDPOINT=https://us-central1-aiplatform.googleapis.com/v1/projects/YOUR_PROJECT/locations/us-central1/endpoints/YOUR_ENDPOINT:predict
LRCP_VERTEX_AI_ROUTER_ENDPOINT=https://us-central1-aiplatform.googleapis.com/v1/projects/YOUR_PROJECT/locations/us-central1/endpoints/YOUR_ENDPOINT:predict

# Google Cloud Authentication (for Vertex AI)
# Set this if using service account key file
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# ============================================
# OPTIONAL: Application Configuration
# ============================================
LRCP_PROJECT_NAME=LLM Reliability Control Plane
LRCP_ENVIRONMENT=production
LRCP_GEMINI_MODEL=gemini-2.5-flash

# ============================================
# OPTIONAL: Frontend (Failure Theater) Datadog RUM
# ============================================
# Get from: https://app.datadoghq.com/rum/application/create
NEXT_PUBLIC_DD_APPLICATION_ID=your-datadog-rum-application-id-here
NEXT_PUBLIC_DD_CLIENT_TOKEN=your-datadog-rum-client-token-here
NEXT_PUBLIC_DD_SITE=datadoghq.com
NEXT_PUBLIC_DD_SERVICE=failure-theater-ui
NEXT_PUBLIC_DD_ENV=production
NEXT_PUBLIC_DD_VERSION=1.0.0

# ============================================
# Cloud Run Specific (set automatically by Cloud Run)
# ============================================
# PORT=8000  # Cloud Run sets this automatically
# DD_AGENT_HOST=  # Leave empty for agentless mode in Cloud Run

